@if (Movies == null)
{
    <img src="https://media2.giphy.com/media/3oEjI6SIIHBdRxXI40/giphy.gif"/>
}
else if (Movies.Count == 0)
{
    <text> There are no records to show</text>
}
else
{
    @foreach (var movie in Movies)
    {
        <p>Title: @movie.Title </p>
        <p> Release Name:<b>@movie.ReleaseDate.ToString("dd MM yyyy")</b></p>
    }

}
@code {
    [Parameter] public List<Movie> Movies { get; set; }
    protected override void OnInitialized()
    {
        Movies = new List<Movie>()
{
               new Movie(){Title = "Spider-Man", ReleaseDate = new DateTime(2019, 7, 2)},
               new Movie(){Title = "Moana", ReleaseDate = new DateTime(2016, 11, 23)},
               new Movie(){Title = "Inception", ReleaseDate = new DateTime(2010, 7, 16)}
        };
    }

}
